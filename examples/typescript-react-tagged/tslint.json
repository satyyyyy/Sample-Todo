{
  "rules": {
    "max-line-length": [
      true,
      140
    ],
    "no-var-keyword": true,
    "no-var-requires": true,
    "curly": true,
    "indent": [
      true,
      "spaces"
    ],
    "one-line": [
      true,
      "check-open-brace",
      "check-catch",
      "check-else",
      "check-whitespace"
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "trailing-comma": false,
    "semicolon": true,
    "triple-equals": [
      true,
      "allow-null-check"
    ]
  }
}